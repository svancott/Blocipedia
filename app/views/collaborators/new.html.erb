<div class="row">
  <div class="col-md-4">
    <p>Please enter the collaborator:</p>
  </div>
  <div class="col-md-8">
    <%= form_for [@wiki, @collaborator] do |f| %>
      <%= f.collection_select :user_id, @wiki.possible_collaborators, :id, :email %>
      <div class="form-group">
        <%= f.submit "Save", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
